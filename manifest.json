{
  "manifest_version": 3,
  "name": "Rozetka Cleaner",
  "short_name": "RZ Cleaner",
  "version": "1.6.1",
  "description": "Hide Rozetka promo blocks and normalize product card prices.",
  "minimum_chrome_version": "114",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Rozetka Cleaner",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.rozetka.com.ua/*"
      ],
      "js": [
        "config.js",
        "dom-utils.js",
        "features/promo.js",
        "features/ads.js",
        "features/ai.js",
        "features/smart.js",
        "features/rich-content-spoiler.js",
        "diagnostics.js",
        "feature-registry.js",
        "content-core.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
