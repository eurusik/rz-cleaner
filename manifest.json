{
  "manifest_version": 3,
  "name": "Rozetka Cleaner",
  "version": "0.1.0",
  "description": "Hides red promo prices and Rozetka AI widget on Rozetka pages.",
  "content_scripts": [
    {
      "matches": [
        "*://*.rozetka.com.ua/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
